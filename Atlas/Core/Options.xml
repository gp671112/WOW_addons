<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="Options.lua"/>
	<Frame name="AtlasOptionsFrame" hidden="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString inherits="GameFontNormalLarge" text="ATLAS_TITLE">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="15" y="-15"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="$parentToggleButton" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="15" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_SHOWBUT);
					</OnLoad>
					<OnClick>
						AtlasButton_Toggle();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_SHOWBUT_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentToggleWorldMapButton" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentToggleButton">>
						<Offset>
							<AbsDimension x="300" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_SHOWWMBUT);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleWorldMapButton();
					</OnClick>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentAutoSelect" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentToggleButton">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_AUTOSEL);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleAutoSelect();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_AUTOSEL_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentRightClick" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentAutoSelect">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_RCLICK);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleRightClick();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_RCLICK_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentAcronyms" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentRightClick">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_ACRONYMS);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleAcronyms();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_ACRONYMS_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentClamped" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentAcronyms">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_CLAMPED);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleClamped();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_CLAMPED_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentCtrl" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentClamped">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_CTRL);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleCtrl();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_CTRL_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentLock" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentCtrl">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_LOCK);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleLock();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_LOCK_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
<!-- temporary disable -->
			<CheckButton name="$parentBossPotrait" inherits="InterfaceOptionsSmallCheckButtonTemplate" hidden="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentLock">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_BOSS_POTRAIT);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleBossPotrait();
					</OnClick>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>

			<CheckButton name="$parentCheckModule" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentBossPotrait">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_CHECKMODULE);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleCheckModule();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_CHECKMODULE_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentColoringDropdown" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentCheckModule">>
						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText(ATLAS_OPTIONS_COLORINGDROPDOWN);
					</OnLoad>
					<OnClick>
						AtlasOptions_ToggleColoringDropDown();
					</OnClick>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_TOPRIGHT");
						GameTooltip:SetText(ATLAS_OPTIONS_COLORINGDROPDOWN_TIP, nil, nil, nil, nil, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</CheckButton>
			<Frame name="$parentDropDownCats" inherits="Lib_UIDropDownMenuTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentColoringDropdown">>
						<Offset>
							<AbsDimension x="0" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<FontString name="$parentLabel" inherits="GameFontNormalSmall" text="ATLAS_OPTIONS_CATDD">
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
									<Offset>
										<AbsDimension x="20" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Slider name="$parentSliderAlpha" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="360" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentDropDownCats">>
						<Offset>
							<AbsDimension x="115" y="-60"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:EnableMouseWheel(true)
						AtlasOptions_SetupSlider(self, ATLAS_OPTIONS_TRANS, 0, 1.0, 0.01);
						AtlasOptionsFrameSliderAlphaLow:SetText("0.00");
						AtlasOptionsFrameSliderAlphaHigh:SetText("1.00");
					</OnLoad>
					<OnValueChanged>
						AtlasOptions_UpdateSlider(self, ATLAS_OPTIONS_TRANS);
						Atlas.db.profile.options.frames.alpha = self:GetValue();
						Atlas_UpdateAlpha();
					</OnValueChanged>
					<OnMouseWheel>
						AtlasOptions_OnMouseWheel(self, delta)
					</OnMouseWheel>
				</Scripts>
			</Slider>
			<Slider name="$parentSliderScale" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="360" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSliderAlpha">>
						<Offset>
							<AbsDimension x="0" y="-35"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:EnableMouseWheel(true)
						AtlasOptions_SetupSlider(self, ATLAS_OPTIONS_SCALE, 0.01, 1.75, 0.01);
						AtlasOptionsFrameSliderScaleLow:SetText("0.01");
						AtlasOptionsFrameSliderScaleHigh:SetText("1.75");
					</OnLoad>
					<OnValueChanged>
						AtlasOptions_UpdateSlider(self, ATLAS_OPTIONS_SCALE);
						Atlas.db.profile.options.frames.scale = self:GetValue();
						Atlas_UpdateScale();
					</OnValueChanged>
					<OnMouseWheel>
						AtlasOptions_OnMouseWheel(self, delta)
					</OnMouseWheel>
				</Scripts>
			</Slider>
			<Slider name="$parentSliderBossDescScale" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="360" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSliderScale">>
						<Offset>
							<AbsDimension x="0" y="-35"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:EnableMouseWheel(true)
						AtlasOptions_SetupSlider(self, ATLAS_OPTIONS_SCALE, 0.01, 1.75, 0.01);
						AtlasOptionsFrameSliderBossDescScaleLow:SetText("0.01");
						AtlasOptionsFrameSliderBossDescScaleHigh:SetText("1.75");
					</OnLoad>
					<OnValueChanged>
						AtlasOptions_UpdateSlider(self, ATLAS_OPTIONS_BOSS_DESC_SCALE);
						Atlas.db.profile.options.frames.boss_description_scale = self:GetValue();
					</OnValueChanged>
					<OnMouseWheel>
						AtlasOptions_OnMouseWheel(self, delta)
					</OnMouseWheel>
				</Scripts>
			</Slider>
