<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<Script file="ztargetme.lua"/>
	<Script file="ztargetme-config.lua"/>

	<Frame name="ZTargetMe" parent="UIParent">
		<Scripts>
			<OnLoad>
				ZTMe_Config_OnLoad(self);	
				ZTMe_Load(self);			
			</OnLoad>

			<OnEvent>
				ZChange(self, event);		
				ZOffScreen(self, event);
				ZOnScreen(self, event);
				WorldEnter(self, event, ...);
				ZSet()
			</OnEvent>
		</Scripts>
	</Frame>
	
	<Frame name="ZTMe_GUIFrame">
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Head" inherits="GameFontNormalLarge" text="薩爾達目標提示設定">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="15" y="-15" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="Fairy_Label" inherits="GameFontNormal" text="妖精">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent_Head">
							<Offset>
								<AbsDimension x="15" y="-30" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="GUIOptions" inherits="GameFontNormal" text="功能">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="Fairy_Label">
							<Offset>
								<AbsDimension x="0" y="-140" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<CheckButton name="$parent_ZTMe" inherits="UICheckButtonTemplate">
				<Size>
					<AbsDimension x="32" y="32"/>
				</Size>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_Head">
						<Offset>
							<AbsDimension x="200" y="6"/>
						</Offset>
					</Anchor>
				</Anchors>   
			</CheckButton>
		
			<Frame name="ZTMe_FairyDropDown" inherits="UIDropDownMenuTemplate" id="1">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="Fairy_Label">
						<Offset>
							<AbsDimension x="-20" y="-25"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Frame>

            <Button name="$parent_Play" inherits="OptionsButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ZTMe_FairyDropDown">
                        <Offset>
                            <AbsDimension x="170" y="-3"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        FairyTest(UIDropDownMenu_GetText(ZTMe_FairyDropDown));
                    </OnClick>
                </Scripts>
            </Button>
			
			<Slider name="$parent_CoreVolSlider" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="130" y="16"/>
				</Size>
				
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="Fairy_Label">
						<Offset>
							<AbsDimension x="0" y="-90"/>
						</Offset>
					</Anchor>
				</Anchors>
				
				<Scripts>
					<OnLoad>
						getglobal(ZTMe_GUIFrame_CoreVolSlider:GetName().."Text"):SetText("主音量");
						getglobal(ZTMe_GUIFrame_CoreVolSlider:GetName().."High"):SetText("100%");
						getglobal(ZTMe_GUIFrame_CoreVolSlider:GetName().."Low"):SetText("關");
						ZTMe_GUIFrame_CoreVolSlider:SetMinMaxValues(0,4);
						ZTMe_GUIFrame_CoreVolSlider:SetValueStep(1);
					</OnLoad>
					
					<OnValueChanged> 
						CoreVolSlider_OnClick()  
					</OnValueChanged>
				</Scripts>
			</Slider>
				
			<Button name="$parent_CVPlay" inherits="OptionsButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_CoreVolSlider">
						<Offset>
							<AbsDimension x="150" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						CoreVTest(VolConvert(ZTMe_GUIFrame_CoreVolSlider:GetValue()));
					</OnClick>
				</Scripts>
			</Button>
			
			<Slider name="$parent_FairyVolSlider" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="130" y="16"/>
				</Size>
				
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="Fairy_Label">
						<Offset>
							<AbsDimension x="280" y="-90"/>
						</Offset>
					</Anchor>
				</Anchors>
				
				<Scripts>
					<OnLoad>
						getglobal(ZTMe_GUIFrame_FairyVolSlider:GetName().."Text"):SetText("妖精音量");
						getglobal(ZTMe_GUIFrame_FairyVolSlider:GetName().."High"):SetText("100%");
						getglobal(ZTMe_GUIFrame_FairyVolSlider:GetName().."Low"):SetText("關");
						ZTMe_GUIFrame_FairyVolSlider:SetMinMaxValues(0,4);
						ZTMe_GUIFrame_FairyVolSlider:SetValueStep(1);
					</OnLoad>
					
					<OnValueChanged> 
						FairyVolSlider_OnClick()  
					</OnValueChanged>
				</Scripts>
			</Slider>

            <Button name="$parent_FVPlay" inherits="OptionsButtonTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parent_FairyVolSlider">
                        <Offset>
                            <AbsDimension x="150" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        FairyVTest(VolConvert(ZTMe_GUIFrame_FairyVolSlider:GetValue()), UIDropDownMenu_GetText(ZTMe_FairyDropDown));
                    </OnClick>
                </Scripts>
            </Button>
			
			<CheckButton name="$parent_AutoLock" inherits="UICheckButtonTemplate">
				<Size>
					<AbsDimension x="32" y="32"/>
				</Size>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="GUIOptions">
						<Offset>
							<AbsDimension x="0" y="-25"/>
						</Offset>
					</Anchor>
				</Anchors>   
			</CheckButton>
			
			<CheckButton name="$parent_PlateEnable" inherits="UICheckButtonTemplate">
				<Size>
					<AbsDimension x="32" y="32"/>
				</Size>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_AutoLock">
						<Offset>
							<AbsDimension x="0" y="-25"/>
						</Offset>
					</Anchor>
				</Anchors>   
			</CheckButton>
			
			<CheckButton name="$parent_DunJo" inherits="UICheckButtonTemplate">
				<Size>
					<AbsDimension x="32" y="32"/>
				</Size>

				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_PlateEnable">
						<Offset>
							<AbsDimension x="0" y="-25"/>
						</Offset>
					</Anchor>
				</Anchors>   
			</CheckButton>

		</Frames>

		<Scripts>
			<OnLoad>
				ZTMe_Panel_OnLoad(self);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>